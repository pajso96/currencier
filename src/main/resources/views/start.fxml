<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.StartController"
            prefHeight="600.0" prefWidth="840.0">
    <top>
        <HBox alignment="CENTER">
            <Text text="Configuration" textAlignment="CENTER" styleClass="title-text"/>
        </HBox>
    </top>

    <center>
        <HBox styleClass="main-container" alignment="CENTER" spacing="12">
            <GridPane alignment="TOP_CENTER" hgap="4" vgap="4">
                <VBox GridPane.rowIndex="1" styleClass="container"  alignment="CENTER" >
                <HBox spacing="10" alignment="CENTER" >
                    <Label text="Choose service you want use" styleClass="text-field"></Label>
                    <ChoiceBox fx:id="currencyServiceChoice">
                        <items>
                            <FXCollections fx:factory="observableArrayList"></FXCollections>
                        </items>
                    </ChoiceBox>
                </HBox>
                    <HBox alignment="CENTER">
                    <Hyperlink text="More..." fx:id="currencyServiceInfoLink"></Hyperlink>
                    </HBox>
                    <HBox alignment="CENTER">
                        <Button text="Test connection"></Button>
                    </HBox>
                </VBox>
                <VBox GridPane.rowIndex="2" alignment="CENTER" spacing="10" styleClass="container">
                    <Label text="Choose date interval" styleClass="text-field"></Label>
                    <HBox spacing="10" alignment="CENTER">
                        <Label text="From" prefWidth="50" styleClass="text-field"></Label>
                        <DatePicker fx:id="intervalFromPicker">

                        </DatePicker>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER">
                        <Label text="To" prefWidth="50" styleClass="text-field"></Label>
                        <DatePicker fx:id="intervalToPicker">

                        </DatePicker>
                    </HBox>
                </VBox>
                <VBox spacing="10" GridPane.rowIndex="3" styleClass="container" alignment="CENTER">
                    <Label text="Refreshing Data" styleClass="title-text"></Label>
                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Auto refresh on program start" styleClass="text-field" prefWidth="250"></Label>
                        <CheckBox fx:id="refreshOnStart"></CheckBox>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Auto refresh by time" styleClass="text-field" prefWidth="250"></Label>
                        <CheckBox fx:id="refreshInterval"></CheckBox>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER">
                        <TextField styleClass="text-field" fx:id="refreshTimeHours" promptText="Hours"
                                   prefWidth="80" disable="true" text="01"></TextField>
                        <TextField styleClass="text-field" fx:id="refreshTimeMinutes" promptText="Minutes"
                                   prefWidth="80" disable="true" text="00"></TextField>
                        <TextField styleClass="text-field" fx:id="refreshTimeSeconds" promptText="Seconds"
                                   prefWidth="80" disable="true" text="00"></TextField>
                    </HBox>
                </VBox>
            </GridPane>

            <GridPane alignment="TOP_CENTER" hgap="4" vgap="4">
                <VBox spacing="10" GridPane.rowIndex="1" styleClass="container" alignment="CENTER">
                    <HBox alignment="CENTER" spacing="12">
                        <Label text="Fetch currency by service" styleClass="text-field" ></Label>
                    <CheckBox fx:id="currenciesByService"></CheckBox>
                    </HBox>
                    <Label text="Or choose which you want to fetch manually" styleClass="info-text" ></Label>
                <ListView fx:id="currenciesListView">
                    <items>
                        <FXCollections fx:factory="observableArrayList"></FXCollections>
                    </items>
                </ListView>
                </VBox>
                <VBox spacing="10" GridPane.rowIndex="2" styleClass="container" alignment="CENTER">

                </VBox>
                <VBox spacing="10" GridPane.rowIndex="3" styleClass="container" alignment="CENTER">

                </VBox>
            </GridPane>
        </HBox>
    </center>

    <bottom>
        <HBox spacing="16" alignment="CENTER">
            <Button text="Save and go" styleClass="title-text"></Button>
        </HBox>
    </bottom>

    <stylesheets>
        <URL value="@/assets/css/main.css"/>
    </stylesheets>
</BorderPane>
